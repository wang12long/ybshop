		$('.btn_').on("click",function(){
			var a=$(this).parent().prev().prev().children().val();
			var b=$(this).parent().prev().children().val();
			var c=$($(this).parent().prev().prev().prev())[0].id;
			
			$.ajax({
				type: "post",
				url: "http://115.28.227.1/projects/xa/php/php08/Back/backCommon.php",
				async: true,
				data: {
					type: "liuxin",
					aa:'aa',
					a: a,
					b: b,
					c: c
				},
				success: function(res) {
					console.log(res.errmsg);
					if(res.errmsg=="修改成功"){
					window.location.href="liuxin.html";
						
					}else{
						alert('修改失败');
					}
					
