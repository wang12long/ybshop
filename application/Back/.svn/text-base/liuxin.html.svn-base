	<script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
	<script type="text/javascript">
		$.ajax({
			type: "post",
			url: "http://115.28.227.1/projects/xa/php/php08/Back/backCommon.php",
			async: true,
			data: {
				type: "liuxin",
				aa:'aaa'
			},
			success: function(res) {
				for (var i=0;i<res.length;i++) {
					if(res[i].XID==1){
						if($('#1').next().children().val()==''){
							$('#1').next().children().val(res[i].Numbers);
						}else{
							$('#1').next().next().children().val(res[i].Numbers);
						}
					}else if(res[i].XID==2){
						if($('#2').next().children().val()==''){
							$('#2').next().children().val(res[i].Numbers);
						}else{
							$('#2').next().next().children().val(res[i].Numbers);
						}
