//置顶
var timer = null;
$('.slideBan:eq(6)').on("click", function() {
	var scrollTop_ = document.body.scrollTop || document.documentElement.scrollTop;
	timer = setInterval(function() {
		if(scrollTop_ > 0) {
			scrollTop_ -= 40;

			document.body.scrollTop = scrollTop_;
		} else {
			clearInterval(timer);
		}
	}, 0.1);
});

