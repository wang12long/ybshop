/*头部*/
*{
	/*border: 1px solid red;*/
}
body{min-width: 1260px;}
			.container {
				padding: 40px 0 20px;
				width: 992px;
			}
			
			.circle {
				display: inline-block;
				width: 10px;
				height: 10px;
				background: #d22b2b;
				border-radius: 50%;
			}
			
			.welcome {
				font-size: 1.8em;
				vertical-align: middle;
				color: #444;
			}
			.sendmsg{float: right; color: #777;margin-top: 4%;cursor: pointer;}
			.sendmsg:hover{color: #D22B2B;}
			/*中间内容*/
			.main {
				width: 100%;
				min-width: 1260px;
				background: url(../../img/login_bg.jpg) center no-repeat;
			}
			
			.container.box {
				/*background: url(../../img/banner.gif) center no-repeat;*/
				/*background: url(../../img/banner2.png) center no-repeat;*/
				width: 100%;
				height: 460px;
				position: relative;
			}
			
			.loginBox {
				width: 349px;
				/*height: 379px;*/
				position: absolute;
				top: 10%;
				right: 10%;
				background: white;
			}
			.topstyle{
				font-size: 0;
				padding: 10px 0;
				border-bottom: 1px solid rgb(244,244,244);
			}
			.changestyle,.fast{
				font-size: 1.3rem;
				padding: 10px 0;
				width:50%;
				display: inline-block;
				text-align: center;
				color: #666;
			}
			.changestyle span,.fast span{
				display: block;
				height: 18px;
				line-height: 18px;
				width: 100%;
				cursor: pointer;
				color: #666;
			}
			
			.changestyle span{
				border-right: 1px solid rgb(244,244,244);
			}
			.passlogin{
				width: 100%;
				text-align: center;
				font-size: 2em;
				color: #d22b2b;	
				padding: 10px 0 10px;
			}
			.box-display{
				width: 349px;
				height: 315px;
				overflow: hidden;
			}
			.boxcontent{
				width: 698px;
				transform: translateX(-349px);
				transition: 1s;
			}
			.boxcontent:after{
				content: "";
				display: block;
				clear: both;
			}
			.account-login,.qr-code{
				width: 50%;	
				text-align: center;
			}
			.account-login{
				background: white;
				float: right;
			}
			.qr-code{
				float: left;
				background: white;
				padding: 30px 0 12px;
				position: relative;
			}
			.code-img{
				width: 200px;
				height: 200px;
				margin: auto;
				border: 1px solid #F7F7F7;
			}
			.qr-code p{
				font-size: 0.8rem;
				padding: 15px 0 20px;
			}
			.qr-code p a{
				color: red;
			}
			.qw-login{
				position: absolute;
				bottom: 10px;
				right: 25px;
			}
			.qw-login span:nth-child(1){
				margin-right: 10px;
			}
			.qw-login span a{
				font-size: 0.8rem;
				color: #666;
			}
			.qw-login span a:hover{
				color: #b61d1d;
			}
			.inputgroup{
				padding: 30px 0;
				text-align: center;
			}
			.input-group-addon{
				background: transparent;
				padding: 5px 10px;
			}
			.input-group-addon span{
				display: inline-block;
				width:20px;
				height: 20px;
			}
			.user_icon{
				background: url(../../img/user-icon.png) 0px -16px no-repeat;
			}
			.lock{
				background: url(../../img/user-icon.png) 0px -36px no-repeat;
			}
			.input-group{
				width: 90%;
				margin: auto;
				padding: 10px 0;
			}
			.checkbox{
				width: 90%;
				margin: 10px auto 20px;
				font-size: 0.8rem;
			}
			.checkbox:after{
				content: "";
				display: block;
				clear: both;
			}
			.checkbox label{
				float: left;	
			}
			.checkbox-input{
				display: inline-block;
				vertical-align: middle;
			}
			.rememberpass{
				display: inline-block;
				vertical-align: middle;
			}
			.checkbox a{
				float: right;
				color: #444;
				text-decoration: none;
				cursor: pointer;
			}
			.checkbox a:hover{color: #D22B2B;}
			#loginbtn{width: 90%;margin: auto;background: #D22B2B;}
			.otherlogin{
				width: 90%;
				margin: auto;
				padding: 20px 0;
			}
			.otherlogin:after{
				content: "";
				display: block;
				clear: both;
			}
			.other_login{
				float: left;
				font-size: 0.8rem;
				margin-top: 2px;
			}
			.line{
				color: #ccc;
				padding: 0 10px;
			}
			.other_login span a{
				color: #666;
				font-size: 0.8rem;
				display: inline-block;
				vertical-align: middle;
				padding-left: 5px;
			}
			.other_login span a:hover{
				color: #b61d1d;	
			}
			.quickregist{
				float: right;
			}
			.regist_ico{
				display: inline-block;
				vertical-align: middle;
				width: 16px;
				height: 16px;
				background: url(../../img/login-ico.png);
			}
			.regist_link{
				display: inline-block;
				vertical-align: middle;
				color: #D22B2B;
				font-size: 0.9rem;
			}
			.regist_link:hover{
				color: #b61d1d;
				text-decoration: underline;	
			}
			
			/*底部*/
			.footer-info{
				width: 100%;
				text-align: center;
				font-size: 12px;
			}
			.footer-info p a{
				color: #666;
				margin-left: 15px;
				text-decoration: none;
			}
			.footer-info p strong{
				margin-left: 10px;
			}
			.footer-info p a:hover{color: red;}